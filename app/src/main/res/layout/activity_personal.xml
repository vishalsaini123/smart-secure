<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.activity.PersonalActivity">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon"/>

        <TextView
            android:id="@+id/txt_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/personal_one"
            android:textColor="@color/txt_red"
            android:textSize="24dp"
            android:textStyle="bold" />


    </RelativeLayout>


    <ScrollView
        android:layout_below="@id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_first_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_shap">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:hint="@string/first_name"
                    android:id="@+id/firstName"
                    android:textColorHint="@color/btn_red"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_shap">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:hint="@string/last_name"
                    android:id="@+id/lastName"
                    android:textColorHint="@color/btn_red"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_shap">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:hint="@string/country"
                    android:id="@+id/country"
                    android:textColorHint="@color/btn_red"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_shap">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:hint="@string/phone"
                    android:id="@+id/phone"
                    android:textColorHint="@color/btn_red"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_shap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:text="@string/gender"
                    android:id="@+id/genderText"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/edit_icon"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genderText"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/male"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textStyle="bold"
                        android:textColor="@color/txt_red"
                        android:textSize="16dp" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/female"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female"
                        android:textStyle="bold"
                        android:textColor="@color/txt_red"
                        android:textSize="16dp" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/other"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other"
                        android:textStyle="bold"
                        android:textColor="@color/txt_red"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_country"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_shap">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:hint="@string/email"
                    android:id="@+id/email"
                    android:textColorHint="@color/btn_red"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/txt_red"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    app:tint="@color/txt_red" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_marginTop="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cornerRadius="30dp"
        android:textColor="@color/white"
        android:layout_above="@+id/bottomLayout"
        android:backgroundTint="@color/btn_red"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_secure"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/smart_secure_icon" />

        <TextView
            android:id="@+id/txt_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/copyright"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/Linear_policy_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/privacy_policy"
                android:textColor="@color/txt_red"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="|"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_term_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/term_condition"
                android:textColor="@color/txt_red"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_height="wrap_content">
    </ProgressBar>


</RelativeLayout>